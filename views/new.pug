extends layout

block content
  a(href="/").btn.btn-secondary TOPへ戻る
  h3.my-3 新規作成ページ
  form(method="post", action="/schedules" novalidate)#applyForm.my-3.needs-validation
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="scheduleName") 予定名
      input(type="text" name="scheduleName" required)#scheduleName.form-control
      div.valid-tooltip 入力OK！
    div.form-group
      label(for="memo") メモ
      textarea(name="memo")#memo.form-control
    div.form-group
      label(for="candidates") 候補日程 (改行して複数入力してください)
      textarea(name="candidates" rows="4")#candidates.form-control
    button(type="submit").btn.btn-info 予定をつくる