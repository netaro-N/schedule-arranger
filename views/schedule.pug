extends layout

block content
  p #{user.id}
  p #{parseInt(user.id)}
  p #{schedule.user.userId}
  - var isMine = user.id === schedule.user.userId
  if isMine
    div
      a(href=`/schedules/${schedule.scheduleId}/edit`) この予定を編集する
  h4 #{schedule.scheduleName}
  p(style="white-space:pre;") #{schedule.memo}
  p 作成者: #{schedule.user.username}
  p 作成者ID: #{schedule.user.userId}
  p 作成者プロバイダー: #{schedule.user.userProvider}
  h3 出欠表
  table
    tr
      th 予定
      each user in users
        th #{user.username},#{user.userId},#{user.userProvider}
    each candidate in candidates
      tr
        th #{candidate.candidateName}
        each user in users
          - var mapMapKey = user.userId+user.userProvider
          - var availability = availabilityMapMap.get(mapMapKey).get(candidate.candidateId)
          - var availabilityLabels = ['欠', '？', '出'];
          td
            if user.isSelf
              p ID : #{user.userId}
              p pro : #{user.userProvider}
              p mmkey : #{mapMapKey}
              button(
                data-schedule-id=schedule.scheduleId
                data-user-id=user.userId
                data-user-provider=user.userProvider
                data-candidate-id=candidate.candidateId
                data-availability=availability).availability-toggle-button #{availabilityLabels[availability]}
            else
              p #{availabilityLabels[availability]}
    tr
      th コメント
      each user in users
        - var commentMapKey = user.userId + user.userProvider;
        if user.isSelf
          td
            p#self-comment #{commentMap.get(commentMapKey)}
            button(
              data-schedule-id=schedule.scheduleId
              data-user-id=user.userId
              data-user-provider=user.userProvider)#self-comment-button 編集
        else
          td
            p #{commentMap.get(commentMapKey)}